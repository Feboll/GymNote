<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
		android:background="@color/app_background"
    tools:context="com.feboll.gymnote.newTrainingEx">


	<Button
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:minHeight="50dp"
		android:text="@string/add_ex"
		android:id="@+id/button03"
		android:background="@drawable/btn_selector"
		android:textColor="@color/button_text_color"
		android:textSize="20dp"
		android:layout_above="@+id/button04"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:onClick="addEx"
		android:layout_alignParentEnd="false"
		android:layout_marginLeft="@dimen/activity_horizontal_margin"
		android:layout_marginRight="@dimen/activity_horizontal_margin"/>

	<Button

		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:minHeight="50dp"
		android:layout_marginLeft="@dimen/activity_horizontal_margin"
		android:layout_marginRight="@dimen/activity_horizontal_margin"
		android:layout_marginTop="5dp"
		android:text="@string/end_training"
		android:id="@+id/button04"
		android:background="@drawable/btn_selector"
		android:textColor="@color/button_text_color"
		android:textSize="20dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:onClick="endTraining"/>

	<ListView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/listView01"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_above="@+id/button03"/>

</RelativeLayout>
