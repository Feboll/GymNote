<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.feboll.gymnote" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MyActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".newTrainingEx"
            android:label="@string/title_activity_new_training_ex"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ExListForTraining"
            android:label="@string/title_activity_ex_list_for_training"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".NewTrainingSet"
            android:label="@string/title_activity_new_training_set"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TrainingList"
            android:label="@string/title_activity_training_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ExList"
            android:label="@string/title_activity_ex_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Gaging"
            android:label="@string/title_activity_gaging"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Statistics"
            android:label="@string/title_activity_statistics"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TrainingExDescription"
            android:label="@string/title_activity_training_ex_description" >
        </activity>
        <activity
            android:name=".ExItemDescription"
            android:label="@string/title_activity_ex_item_description" >
        </activity>
        <activity
            android:name=".UserProfile"
            android:label="@string/title_activity_user_profile" >
        </activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name=".UserProfileItem"
            android:label="@string/title_activity_user_profile_item" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
